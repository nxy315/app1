/* pages/center/center.wxss */
page{
  background-color: #f1f3f4;
}
#userWrap{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 0 50rpx;
  height: 220rpx;
  background-color: #666;
}
.avator{
  padding: 0;
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
}
.avator image{
  width: 140rpx;
  height: 140rpx;
}
.userName{
  color: #fff;
  font-size: 30rpx;
}

#bindPhoneWrap{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-top: 20rpx;
  padding: 60rpx 30rpx;
  background-color: #fff;
}
#bindPhoneWrap .cover{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  margin-right: 10rpx;
  width: 60rpx;
  height: 60rpx;
  background-color: #f2f2e9;
  border-radius: 50%;
}
#bindPhoneWrap .cover image{
  width: 44rpx;
  height: 44rpx;
}
#bindPhoneWrap .phone{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  width: 500rpx;
}
#bindPhoneWrap .phone .tel{
  font-size: 30rpx;
}
#bindPhoneWrap .phone .tel-des{
  font-size: 24rpx;
  color: #999;
}
#bindPhoneWrap .bind-btn{
  width: 120rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  background-color: #3f5aa8;
  color: #fff;
  font-size: 24rpx;
  border-radius: 6rpx;
}

#menu{
  margin-top: 20rpx;
  background-color: #fff;
  font-size: 28rpx;
}
#menu .menu-item{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 0 30rpx;
  height: 120rpx;
}
#menu .menu-item .menu-icon{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  width: 35rpx;
  height: 35rpx;
}
#menu .menu-item .menu-icon image{
  width: 35rpx;
  height: 35rpx;
}
.kfbtn{
  margin: 0;
  padding: 0;
  background-color: #fff;
  border: none;
  font-size: 28rpx;
}
.kfbtn:after{
  width: auto;
  height: auto;
}
#menu .menu-item .menu-name{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  width: 630rpx;
  height: 119rpx;
}
.border-b{
  border-bottom: 2rpx solid #f1f3f4;
}
/* #menu .menu-item:last-child .menu-name{
  border: none;
} */
#menu .menu-item .menu-name .name{}
#menu .menu-item .menu-name .arrow{
  width: 44rpx;
  height: 44rpx;
}