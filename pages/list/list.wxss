/* pages/list/list.wxss */
#filterWrap{
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  z-index: 10;
}
.fixed-filter{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  height: 100rpx;
  text-align: center;
  font-size: 30rpx;
  background-color: #fff;
  position: relative;
  z-index: 2;
}
.filter{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  width: 33.3%;
  height: 100%;
  font-weight: normal;
}
.triangle{
  margin-left: 10rpx;
  width: 0;
  height: 0;
  border-left: 10rpx solid transparent;
  border-right: 10rpx solid transparent;
}
.up{
  border-top: 10rpx solid #333;  
}
.down{
  border-bottom: 10rpx solid #fa5f22;
}
.filter.active{
  color: #fa5f22;
}
.filter-list{
  /* display: none;  */
  position: relative;
  z-index: 2;
  font-size: 30rpx;
  background-color: #fff;
}
.list-item{
  padding-left: 24rpx;  
  height: 100rpx;
  line-height: 100rpx;
  border-bottom: 1rpx solid #dcdcdc;  
}
.list-item:last-child{
  border: none;
}
.list-item.active{
  color: #fa5f22;
}
#mask{
  /* display: none;  */
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.7);
  z-index: 1;
}

.much{
  margin-top: 100rpx;
  padding-left: 24rpx;
  height: 60rpx;
  line-height: 60rpx;
  background-color: #f1f3f4;
  font-size: 24rpx;
  color: #999;
}