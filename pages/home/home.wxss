/* pages/home/home.wxss */
#advWrap{
  width: 100%;
  height: 240rpx;
}
#adv{
  width: 100%;
  height: 240rpx;
}
#fastEnter{
  height: 210rpx;
  background-color: white;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
}
#fastEnter .enter{
  width: 20%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
#fastEnter .icon{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  margin-bottom: 8px;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}
#fastEnter .icon1{
  background: -webkit-linear-gradient(top, #7cd58c, #57bb69);
}
#fastEnter .icon2{
  background: -webkit-linear-gradient(top, #ede97b, #dcd753);
}
#fastEnter .icon3{
  background: -webkit-linear-gradient(top, #ec82aa, #dc5286);
}
#fastEnter .icon4{
  background: -webkit-linear-gradient(top, #a1a7da, #505ec5);
}
#fastEnter .icon5{
  background: -webkit-linear-gradient(top, #fb69a7, #f4438e);
}

#fastEnter .icon image{
  width: 55rpx;
  height: 55rpx;
}
#fastEnter .des{
  font-size: 26rpx;
}

.block{
  height: 20rpx;
  background-color: #f1f3f4;
}

.hot-list{
  /* padding: 40rpx 24rpx 40rpx; */
  background-color: #fff;

  margin-bottom: 40rpx;
  padding: 0 24rpx 0;
}
.hot-list:last-child{
  margin: 0;
}
.hot-list .hot-title{
  /* margin-top: 40rpx;
  margin-bottom: 40rpx; */
  height: 100rpx; 
  display: flex;
  flex-direction: column;
  justify-content: center;
  
}
.hot-list .hot-title .title{
  font-size: 34rpx;
  font-weight: bold;

  height: 34rpx;
  line-height: 34rpx;
  padding-left: 30rpx;
  border-left: 4rpx solid #666;
}
.hot-list .hot-title .des{
  font-size: 26rpx;
  color: #6e7f8c;
}

.list{
  
}
.list .item{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 80rpx;
  height: 120rpx;
}
.list .item:last-child{
  margin: 0;
}
.list .item .cover{
  width: 120rpx;
  height: 120rpx;
  border-radius: 6rpx;
  border: 1rpx solid #ccc;
}
.list .item .cover image{
  width: 120rpx;
  height: 120rpx;
}
.list .item .detail{
  width: 410rpx;
  height: 130rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.list .item .detail .name{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  font-size: 34rpx;
}
.list .item .detail .name .tail{
  margin-left: 10rpx;
  font-size: 18rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  
  /* border-radius: 5rpx; */
}
.list .item .detail .name .tail text{
  display: block;
  padding: 0 6rpx;
  height: 32rpx;
  line-height: 32rpx;
  box-sizing: border-box;
}
.list .item .detail .name .tail .time{
  background-color: #66a7cd;
  color: white;
  border-radius: 5rpx 0 0 5rpx;
}
.list .item .detail .name .tail .fk{
  line-height: 28rpx; 
  color: #66a7cd;
  border-radius: 0 5rpx 5rpx 0;
  border: 1rpx solid #66a7cd;
  
}
.list .item .detail .count{
  font-size: 26rpx;
  color: #fa5f22;
}
.list .item .detail .info{
  font-size: 24rpx;
  color: #999;
}
.list .item .apply{
  width: 120rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  font-size: 26rpx;
  background-color: white;
  color: #fa5f22;
  border: 2rpx solid #fa5f22;
  border-radius: 6rpx;
}
.list .item .apply:active{
  color: #fff;
  background-color: #fa5f22;
}

#loading{
  position: fixed;
  width: 100%;
  height: 100%;
  z-index: 1000;
  background-color: #fff;
}
#loading image{
  position: absolute;
  left: 50%;
  top: 50%;
  margin-left: -91.5rpx;
  margin-top: -132.5rpx;
  width: 183rpx;
  height: 265rpx;
}