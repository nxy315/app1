/* pages/home/home.wxss */
#fastEnter{
  height: 160rpx;
  background-color: white;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
}
#fastEnter .enter{
  width: 25%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
#fastEnter .icon{
  margin-bottom: 5px;
  width: 35px;
  height: 35px;
  background-color: pink;
  border-radius: 50%;
}
#fastEnter .des{

}

.block{
  height: 20rpx;
  background-color: #ccc;
}

.hot-list{
  padding: 20rpx 24rpx 40rpx;
  background-color: #fff;
}
.hot-list:last-child{
  margin: 0;
}
.hot-list .hot-title{
  margin-bottom: 20rpx;
  height: 100rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.hot-list .hot-title .title{
  font-size: 30rpx;
  font-weight: bold;
}
.hot-list .hot-title .des{
  font-size: 20rpx;
  color: #ccc;
}

.list{
  
}
.list .item{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 60rpx;
  height: 120rpx;
}
.list .item:last-child{
  margin: 0;
}
.list .item .cover{
  width: 120rpx;
  height: 120rpx;
  border-radius: 6rpx;
  border: 1rpx solid #ccc;
}
.list .item .detail{
  width: 410rpx;
  height: 120rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.list .item .detail .name{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  font-size: 30rpx;
}
.list .item .detail .name .tail{
  margin-left: 10rpx;
  font-size: 18rpx;
  border: 1px solid #ccc;
  border-radius: 5rpx;
}
.list .item .detail .name .tail text{
  padding: 0 6rpx;
  height: 20rpx;
  line-height: 20rpx;
}
.list .item .detail .name .tail .time{
  background-color: #ccc;
  color: white;  
}
.list .item .detail .name .tail .fk{
  color: gray;
}
.list .item .detail .count{
  font-size: 24rpx;
  color: orange;
}
.list .item .detail .info{
  font-size: 24rpx;
  color: #ccc;
}
.list .item .apply{
  width: 120rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  font-size: 24rpx;
  background-color: white;
  color: orange;
  border: 1rpx solid orange;
  border-radius: 6rpx;
}
.list .item .apply:active{
  color: #fff;
  background-color: orange;
}
